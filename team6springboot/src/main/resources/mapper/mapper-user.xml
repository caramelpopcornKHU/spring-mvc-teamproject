<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lx.team6springboot.repository.UserDAO">

    <insert id="insertUser" parameterType="com.lx.team6springboot.vo.UserVO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (username, password, email)
        VALUES (#{username}, #{password}, #{email})
    </insert>

    <select id="selectUserById" parameterType="java.lang.String" resultType="com.lx.team6springboot.vo.UserVO">
        SELECT
            id,
            username,
            password,
            email,
            created_at AS createdAt,
            updated_at AS updatedAt
        FROM
            user
        WHERE
            id = #{id}
    </select>

    <update id="updateUser" parameterType="com.lx.team6springboot.vo.UserVO">
        UPDATE user
        SET
            username = #{username},
            password = #{password},
            email = #{email}
        WHERE
            id = #{id}
    </update>

    <delete id="deleteUser" parameterType="java.lang.String">
        DELETE FROM user WHERE id = #{id}
    </delete>

</mapper>